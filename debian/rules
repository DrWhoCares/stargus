#!/usr/bin/make -f
# debian/rules that uses debhelper.
# GNU copyright 1997 to 1999 by Joey Hess.
# GNU Copyright 2002-2004 by David Martínez Moreno.

# Do you want verbosity...? Uncomment this.
#export DH_VERBOSE=1

export LC_ALL=C

# We have to honor DEB_BUILD...
ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
CONFIGURE_FLAGS += --enable-profile
endif

DEB_BUILD_GNU_CPU ?= $(shell dpkg-architecture -qDEB_BUILD_GNU_CPU)

export CFLAGS

build: 
	dh_testdir
	$(MAKE)

clean: 
	dh_testdir
	dh_testroot

	$(MAKE) clean

	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	if [ -d .svn ]; then \
		svn export scripts $(CURDIR)/debian/stargus/usr/share/games/stratagus/stargus/scripts  --force; \
	else \
		cp -r scripts $(CURDIR)/debian/wargus/usr/share/games/stratagus/wargus/; \
	fi

	install -m0755 startool $(CURDIR)/debian/stargus/usr/games
	install -m0755 stargus $(CURDIR)/debian/stargus/usr/games
	install -m0644 debian/stargus.desktop $(CURDIR)/debian/stargus/usr/share/applications

	install -m0644 contrib/fog.png $(CURDIR)/debian/stargus/usr/share/games/stratagus/stargus/graphics/tilesets
	install -m0644 mpqlist.txt $(CURDIR)/debian/stargus/usr/share/games/stratagus/stargus
	convert contrib/stargus.ico $(CURDIR)/debian/stargus/usr/share/pixmaps/stargus.png

# Build architecture-independent files here.
binary-indep: build install

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdebconf
	dh_installdocs
	dh_installmenu
	dh_installman
	dh_desktop
	dh_installchangelogs
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install

